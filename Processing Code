imimport processing.serial.*;
import cc.arduino.*;

Arduino arduino;
int ledPin = 13;
int x=Arduino.HIGH;
int y=Arduino.LOW;
void setup()
{
  size(800,800);
  background(75);
  {noStroke();
  fill(150);
  rect(0, 400, 800, 400);}
  arduino = new Arduino(this, Arduino.list()[2], 57600);
  arduino.pinMode(ledPin, Arduino.OUTPUT);
}

void draw()
{
 if (mouseY>400){
  arduino.digitalWrite(ledPin, Arduino.HIGH);}
  if (mouseY<=400) {
 arduino.digitalWrite(ledPin, Arduino.LOW);}
}
